@model SFWebUI.Models.CustomerVM

<h1 class="display-4">Create Customer</h1>
<h3>Create a new customer account here.</h3>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label">Name</label>
        <input asp-for="CustomerName" type="text" class="form-control">
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerAddress" class="form-label">Address</label>
        <input asp-for="CustomerAddress" type="text" class="form-control">
        <span asp-validation-for="CustomerAddress" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerEmail" class="form-label">Email</label>
        <input asp-for="CustomerEmail" type="text" class="form-control">
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label asp-for="CustomerPhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="CustomerPhoneNumber" type="text" class="form-control">
        <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-5">
        <label asp-for="CustomerID" class="form-label">ID</label>
        <input asp-for="CustomerID" type="text" class="form-control">
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Submit</button>
</form>