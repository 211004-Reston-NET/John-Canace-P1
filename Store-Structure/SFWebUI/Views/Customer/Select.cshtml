@model SFWebUI.Models.CustomerVM

<h1 class="display-4">Select Customer</h1>
<h3>Find a customer's account here.</h3>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="CustomerID" class="form-label">ID</label>
        <input asp-for="CustomerID" type="text" class="form-control">
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" value="Select">Submit</button>
</form>