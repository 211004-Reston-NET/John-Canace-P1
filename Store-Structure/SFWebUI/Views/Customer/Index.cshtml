@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<SFWebUI.Models.CustomerVM>

<h1 class="display-4">List of Customers</h1>

<a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Create">Add Customer</a>
<br /> <!-- This br tag will space between elements -->
<br />

<a class="btn btn-primary text-white" asp-controller="Customer" asp-action="Select">Find Customer</a>
<br /> <!-- This br tag will space between elements -->
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Email</th>
        <th>PhoneNumber</th>
        <th>ID</th>
        <th></th>
    </tr>
    @foreach (CustomerVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerAddress)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerPhoneNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
            <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the customer controller-->
                <!--Third parameter will give the information from the view to the controller-->

            </td>
        </tr>
    }
</table>