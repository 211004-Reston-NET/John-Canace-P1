@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<SFWebUI.Models.OrderVM>

<h1 class="display-4">List of Orders</h1>

<a class="btn btn-primary text-white" asp-controller="Order" asp-action="Create">Place Order</a>
<br /> <!-- This br tag will space between elements -->
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>CustomerID</th>
        <th>StoreFrontID</th>
        <th>TotalPrice</th>
        <th>OrderList</th>
        <th></th>
    </tr>
    @foreach (OrderVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CustomerID)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreID)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
            <td>@Html.DisplayFor(modelItem => item.OrderList)</td>
            <td>
                
            </td>
        </tr>
    }
</table>