@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<SFWebUI.Models.ProductVM>

<h1 class="display-4">List of Products</h1>

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>ID</th>
        <th>Price</th>
        <th>Description</th>
        <th>Category</th>
        <th>StoreID</th>
        <th>Quantity</th>
        <th></th>
    </tr>
    @foreach (ProductVM item in Model)
    {
<tr>
    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
    <td>@Html.DisplayFor(modelItem => item.ProductID)</td>
    <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
    <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
    <td>@Html.DisplayFor(modelItem => item.ProductCategory)</td>
    <td>@Html.DisplayFor(modelItem => item.StoreStoreID)</td>
    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
    <td>
        <!--First parameter of ActionLink is the name it will give for this element -->
        <!--Second parameter will point to the action of the customer controller-->
        <!--Third parameter will give the information from the view to the controller-->

        <button class="btn btn-primary">@Html.ActionLink("Update Quantity", "Edit", "Product", new { p_id = item.ProductID }, new { style = "color: white" })</button>
    </td>
</tr>
    }
</table>