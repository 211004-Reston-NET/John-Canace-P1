@model SFWebUI.Models.StoreFrontVM

<h1 class="display-4">Select Store Inventory</h1>
<h3>View a specific Storefront's inventory here.</h3>

<form asp-action="Details">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="StoreFrontId" class="form-label">ID</label>
        <input asp-for="StoreFrontId" type="text" class="form-control">
