@{
}

@* This tells you that this view will expect to retrieve a list of RestaurantVM *@
@model IEnumerable<SFWebUI.Models.StoreFrontVM>

<h1 class="display-4">List of StoreFronts</h1>

<a class="btn btn-primary text-white" asp-controller="StoreFront" asp-action="Create">Add Customer</a>
<br/> <!-- This br tag will space between elements -->
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>ProductsList</th>
        <th></th>
    </tr>
    @foreach(StoreFrontVM item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontId)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontName)</td>
            <td>@Html.DisplayFor(modelItem => item.StoreFrontAddress)</td>
            <td>@Html.DisplayFor(modelItem => item.ProductsList)</td>
            <td>
                <!--First parameter of ActionLink is the name it will give for this element -->
                <!--Second parameter will point to the action of the customer controller-->
                <!--Third parameter will give the information from the view to the controller-->
                
            </td>
        </tr>
    }
</table>